@using Microsoft.AspNetCore.Identity

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    string? Id = UserManager.GetUserId(User);
}
<ul class="dropdown-menu">
@if (SignInManager.IsSignedIn(User))
{
    <li>
        <a id="manage" class="dropdown-item text-dark" asp-area="" asp-controller="User" asp-action="Card" asp-route-Id="@Id" title="Manage"><i class="fa-solid fa-circle-info fa-fw me-2"></i>معلومات المستخدم الحالي</a>
    </li>
    <li><hr class="dropdown-divider" /></li>
    <li>
        <a id="manage" class="dropdown-item text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><i class="fa-solid fa-user fa-fw me-2"></i> أعدادات الحساب</a>
    </li>
     <li><hr class="dropdown-divider" /></li>
    <li>
        <form id="logoutForm" class="form-inline dropdown-item" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0 p-0"><i class="fa-solid fa-right-from-bracket fa-fw me-2"></i> تسجيل الخروج</button>
        </form>
    </li>
}
