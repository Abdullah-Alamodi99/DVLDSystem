
@model RoleManagementVM
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "أدارة الادوار";

    string ErrorMessage = TempData["ErrorMessage"] as string;
    bool ShowErrorModal = !string.IsNullOrEmpty(ErrorMessage);
}
<div class="main-content">
    <div class="container">
        <partial name="_ErrorMessage" model="@ErrorMessage" />
        @* ==== page header ====*@
        <div class="page-header d-flex justify-content-between align-items-center py-4">
            <h5 class="page-title mb-0"> الصلاحيات </h5>
            <div aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a asp-controller="User" asp-action="Index">قائمة المستخدمين</a></li>
                    <li class="breadcrumb-item active" aria-current="page">الصلاحيات</li>
                </ol>
            </div>
        </div>
        @* ==== page header ====*@

        <div class="card bg-white rounded shadow border-0">
            <div class="card-header p-3 bg-primary">
                <h5 class="text-white mb-0">إدارة صلاحيات المستخدم</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <input asp-for="User.Id" hidden />
                    <div class="row">
                        <div class="col-12 col-md-6 form-floating py-2">
                            <input asp-for="User.Person.FullName" readonly class="form-control" />
                            <label asp-for="User.Person.FullName" class="form-label ms-2 mt-1">الاسم كامل</label>
                        </div>

                        <div class="col-12 col-md-6 form-floating py-2">
                            <select asp-for="@Model.User.Role" class="form-select">
                                @foreach (var role in Model.RoleList)
                                {
                                    <option value="@role.Value">@Localizer[role.Text]</option>
                                }
                            </select>
                            <label asp-for="@Model.User.Role" class="form-label ms-2 mt-1">الدور</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-md-3">
                            <button type="submit" class="btn btn-primary form-control mt-3">
                                <i class="fa-solid fa-pencil me-2"></i> تعديل الدور
                            </button>
                        </div>
                        
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            var showErrorModal = @ShowErrorModal.ToString().ToLower();

            if (showErrorModal == true) {
                $('#errorModal').modal('show');
            };
        });
    </script>
}