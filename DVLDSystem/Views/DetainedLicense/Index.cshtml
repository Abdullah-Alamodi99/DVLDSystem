@{
    ViewData["Title"] = "الرخص المحجوزة";
}
<div class="main-content">
    <div class="container-fluid">
        @* ==== page header ====*@
        <div class="page-header d-flex justify-content-between align-items-center py-4">
            <h5 class="page-title mb-1"> الرخص المحجوزة </h5>
            <div aria-label="breadcrumb">
                <ol class="breadcrumb mb-1">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">الرئيسية</a></li>
                    <li class="breadcrumb-item active" aria-current="page"> الرخص المحجوزة </li>
                </ol>
            </div>
        </div>
        @* ==== page header ====*@
        <div class="bg-white rounded p-3 shadow-sm">
            <div class="w-100 text-end">
                
                <a asp-controller="DetainedLicense" asp-action="Detain" class="btn btn-primary my-2 mb-4 ">
                    <i class="fa-solid fa-hand fa-lg fa-fw me-2"></i> حجز رخصة
                </a>
                <a asp-controller="DetainedLicense" asp-action="Release" class="btn btn-primary my-2 mb-4 ">
                    <i class="fa-solid fa-hand-holding fa-lg fa-fw me-2"></i> فك حجز رخصة
                </a>
            </div>
            <table id="tblData" class="table table-striped table-borderless nowrap pt-1 w-100">
                <thead class="table-light">
                    <tr>
                        <th></th>
                        <th>رقم الحجز</th>
                        <th>رقم الرخصة المحجوزة</th>
                        <th>تاريخ الحجز</th>
                        <th>تم فك الحجز؟</th>
                        <th>الغرامة المالية</th>
                        <th>تاريخ فك الحجز </th>
                        <th>رقم طلب فك الحجز</th>
                        <th>الرقم الوطني</th>
                        <th>الاسم كامل</th>
                        <th>العمليات</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>

        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/detained-license.js"></script>
    <script src="~/js/site.js"></script>
}
