@{
    ViewData["Title"] = "إدارة الأختبارات";
}

@model List<TestType>

<div class="main-content">
    <div class="container px-2 px-md-4">
        <!-- Page header -->
        <div class="page-header d-flex justify-content-between align-items-center py-4">
            <h5 class="mb-0">قائمة أنواع الأختبارات</h5>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">الرئيسية</a></li>
                    <li class="breadcrumb-item active" aria-current="page">قائمة أنواع الأختبارات</li>
                </ol>
            </nav>
        </div>

        <!-- Table -->
        <div class="table-responsive bg-white rounded shadow-sm p-3">
            <table class="table table-bordered table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="w-25">العنوان</th>
                        <th class="w-50">الوصف</th>
                        <th class="text-center">الرسوم</th>
                        <th class="text-center">الإجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @if(!Model.Any() || Model == null)
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted py-3">
                                لا توجد بيانات
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var test in Model)
                        {
                            <tr>
                                <!-- Title truncated -->
                                <td class="text-truncate" style="max-width: 200px;"
                                    data-bs-toggle="tooltip" data-bs-placement="top" title="@test.Title">
                                    @test.Title
                                </td>

                                <!-- Description truncated -->
                                <td class="text-truncate" style="max-width: 300px;"
                                    data-bs-toggle="tooltip" data-bs-placement="top" title="@test.Description">
                                    @test.Description
                                </td>

                                <td class="text-center">@test.Fees</td>
                                <td class="text-center">
                                    <div class="d-flex justify-content-center flex-wrap gap-2">
                                        <a asp-controller="TestType" asp-action="Edit" asp-route-Id="@test.Id"
                                           class="btn btn-primary btn-sm d-flex align-items-center">
                                            <i class="fa-solid fa-pencil me-1"></i> تعديل
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Enable Bootstrap tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })
    </script>
}
