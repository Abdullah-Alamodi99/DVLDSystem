@model TestType
@{
    ViewData["Title"] = "تعديل نوع الفحص";
}
<div class="main-content">
    <div class="container">
        <!-- ==== page header ==== -->
        <div class="page-header d-flex justify-content-between align-items-center py-4">
            <h5 class="page-title mb-0">تعديل نوع الأختبار</h5>
            <div aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a asp-controller="TestType" asp-action="Index">قائمة الأختبارات</a></li>
                    <li class="breadcrumb-item active" aria-current="page">تعديل نوع الأختبار</li>
                </ol>
            </div>
        </div>
        <!-- ==== page header ==== -->

        <div class="page-content bg-white rounded py-3 px-4 shadow-sm">
            <form method="post">
                <div class="row g-3">
                    <div class="col-12 col-md-6">
                        <label asp-for="Title" class="form-label">العنوان</label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger small"></span>
                    </div>

                    <div class="col-12 col-md-6">
                        <label asp-for="Fees" class="form-label">الرسوم</label>
                        <input asp-for="Fees" type="number" class="form-control" />
                        <span asp-validation-for="Fees" class="text-danger small"></span>
                    </div>

                    <div class="col-12 col-md-6">
                        <label asp-for="Description" class="form-label">الوصف</label>
                        <textarea asp-for="Description" class="form-control" rows="4" style="resize: vertical;"></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>

                </div>

                <div class="row mt-3">
                    <div class="col-12 col-md-3">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fa-solid fa-pencil me-1"></i> تعديل
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
