@{
    ViewData["Title"] = "الرخص الدولية"; 
}
<div class="main-content">
    <div class="container">
        @* ==== page header ====*@
        <div class="page-header d-flex justify-content-between align-items-center py-4">
            <h5 class="page-title mb-1"> الطلبات </h5>
            <div aria-label="breadcrumb">
                <ol class="breadcrumb mb-1">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">الرئيسية</a></li>
                    <li class="breadcrumb-item active" aria-current="page">طلبات الرخصة الدولية</li>
                </ol>
            </div>
        </div>
        @* ==== page header ====*@
        <div class="bg-white rounded p-3 shadow-sm">
            <div class="w-100 text-end">
                <a asp-controller="InternationalLicense" asp-action="Issue" class="btn btn-primary my-2 mb-4 ">
                    <i class="fa-solid fa-person-circle-plus me-2"></i> أضافة طلب
                </a>
            </div>
            <table id="tblData" class="table table-striped table-borderless nowrap pt-1 w-100">
                <thead class="table-light">
                    <tr>
                        <th></th>
                        <th>رقم الرخصة الدولية</th>
                        <th>رقم الطلب</th>
                        <th>معرّف السائق</th>
                        <th>رقم الرخصة المحلية</th>
                        <th>تاريخ الإصدار</th>
                        <th>تاريخ الإنتهاء</th>
                        <th>نشطة</th>
                        <th>العمليات</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>

        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/international-license.js"></script>
    <script src="~/js/site.js"></script>
}
