@model LicenseOperationVM

@{
    ViewData["Title"] = "استبدال الرخصة";

    string? ErrorMessage = TempData["ErrorMessage"] as string;
    bool CanRenew = ViewBag.CanIssueForOperation;
    bool ShowErrorModal = !string.IsNullOrEmpty(ErrorMessage);
    string disabled = !CanRenew ? "disabled" : "";
    string ActionName = "";
}

<div class="main-content my-3 my-lg-4">
    <div class="container">
        <div class="bg-white p-3">
            <partial name="_ErrorMessage" model="@ErrorMessage" />

            <!-- Search + Radio Section -->
            <form asp-action="SearchLocalLicense" id="searchForm"
                  class="get row align-items-center justify-content-between gy-3 gx-0">

                <!-- Search input + button -->
                <div class="col-12 col-lg-6 d-flex flex-column flex-lg-row align-items-lg-center">
                    <label class="fw-semibold me-lg-2 mb-2 mb-lg-0 text-nowrap">رقم الرخصة المحلية:</label>
                    <div class="d-flex flex-grow-1">
                        <input type="text" id="searchValue" name="OldLicenseId" class="form-control me-2" />
                        <button id="btnSearch" type="submit" class="btn btn-primary">بحث</button>
                    </div>
                </div>


                <div class="col-12 col-lg-5 d-flex align-items-center justify-content-lg-start justify-content-between
                        px-3 py-2 rounded border border-primary-subtle bg-light"
                     style="min-height: 58px;">

                    <div class="d-flex flex-column flex-lg-row align-items-lg-center w-100">
                        @if (Model.NewLicense.IssueReason == (byte)License.enIssueReason.ReplaceForDamage)
                        {
                            ActionName = "إصدار بدل تالف";
                            <div class="form-check me-lg-4">
                                <input class="form-check-input" type="radio" name="OperationType"
                                       value="@LicenseOperationVM.enLicenseOperationType.LostReplacement" id="lostRadio" />
                                <label class="form-check-label" for="lostRadio">إصدار بدل فاقد</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="OperationType"
                                       value="@LicenseOperationVM.enLicenseOperationType.DamagedReplacement" id="damagedRadio" checked />
                                <label class="form-check-label" for="damagedRadio">إصدار بدل تالف</label>
                            </div>
                        }
                        else
                        {
                            ActionName = "إصدار بدل فاقد";
                            <div class="form-check me-lg-4">
                                <input class="form-check-input" type="radio" name="OperationType"
                                       value="@LicenseOperationVM.enLicenseOperationType.LostReplacement" id="lostRadio" checked />
                                <label class="form-check-label" for="lostRadio">إصدار بدل فاقد</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="OperationType"
                                       value="@LicenseOperationVM.enLicenseOperationType.DamagedReplacement" id="damagedRadio" />
                                <label class="form-check-label" for="damagedRadio">إصدار بدل تالف</label>
                            </div>
                        }
                    </div>
                </div>
            </form>

            <!-- License Info -->
            <partial name="_LicenseInfo" model="@Model.OldLicense" />

            <!-- Request Info -->
            <div class="card border-0 mt-4 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">معلومات الطلب</h5>
                </div>
                <div class="card-body">
                    <div class="row gy-3">
                        <!-- Left column -->
                        <div class="col-12 col-md-6">
                            <div class="mb-3">
                                <i class="fa-solid fa-calendar-days fa-fw me-2 text-primary"></i>
                                <label class="fw-semibold">تاريخ الطلب:</label>
                                <span>@Model.NewLicense.Application.ApplicationDate.ToShortDateString()</span>
                            </div>
                            <div class="mb-3">
                                <i class="fa-solid fa-coins fa-fw me-2 text-primary"></i>
                                <label class="fw-semibold">رسوم الطلب:</label>
                                <span>@Model.NewLicense.Application.PaidFees</span>
                            </div>
                            <div class="mb-3">
                                <i class="fa-solid fa-coins fa-fw me-2 text-primary"></i>
                                <label class="fw-semibold">رسوم الرخصة:</label>
                                <span>@(Model.NewLicense.PaidFees == 0 ? "???" : Model.NewLicense.PaidFees)</span>
                            </div>
                        </div>

                        <!-- Right column -->
                        <div class="col-12 col-md-6">
                            <div class="mb-3">
                                <i class="fa-solid fa-hashtag fa-fw me-2 text-primary"></i>
                                <label class="fw-semibold">رقم الرخصة القديمة:</label>
                                <span>@(Model.OldLicense == null ? "???" : Model.OldLicense.Id)</span>
                            </div>
                            <div class="mb-3">
                                <i class="fa-solid fa-user fa-fw me-2 text-primary"></i>
                                <label class="fw-semibold">من إنشاء:</label>
                                <span>@Model.NewLicense.User.UserName</span>
                            </div>
                            <div class="mb-3">
                                <i class="fa-solid fa-coins fa-fw me-2 text-primary"></i>
                                <label class="fw-semibold">إجمالي الرسوم:</label>
                                <span>@(Model.NewLicense == null ? "???" : Model.NewLicense.PaidFees + Model.NewLicense.Application.PaidFees)</span>
                            </div>
                        </div>
                    </div>

                    <!-- Notes & Submit -->
                    <form method="post" asp-action="ReplacementLicense" class="mt-4">
                        @* Hidden fields unchanged *@
                        <input asp-for="OldLicense.Id" hidden />
                        <input asp-for="OldLicense.IssueDate" hidden />
                        <input asp-for="OldLicense.ExpirationDate" hidden />
                        <input asp-for="OldLicense.LicenseClassId" hidden />
                        <input asp-for="OldLicense.CreatedByUserId" hidden />
                        <input asp-for="OldLicense.IssueReason" hidden />
                        <input type="checkbox" asp-for="OldLicense.IsActive" hidden />
                        <input asp-for="OldLicense.ApplicationId" hidden />
                        <input asp-for="OldLicense.DriverId" hidden />
                        <input asp-for="OldLicense.PaidFees" hidden />

                        <input asp-for="NewLicense.Id" hidden />
                        <input asp-for="NewLicense.IssueDate" hidden />
                        <input asp-for="NewLicense.ExpirationDate" hidden />
                        <input asp-for="NewLicense.LicenseClassId" hidden />
                        <input asp-for="NewLicense.CreatedByUserId" hidden />
                        <input asp-for="NewLicense.IssueReason" hidden />
                        <input type="checkbox" asp-for="NewLicense.IsActive" hidden />
                        <input asp-for="NewLicense.ApplicationId" hidden />
                        <input asp-for="NewLicense.DriverId" hidden />
                        <input asp-for="NewLicense.PaidFees" hidden />
                        <input asp-for="NewLicense.Application.ApplicationDate" hidden />
                        <input asp-for="NewLicense.Application.ApplicationStatus" hidden />
                        <input asp-for="NewLicense.Application.LastStatusDate" hidden />
                        <input asp-for="NewLicense.Application.PaidFees" hidden />
                        <input asp-for="NewLicense.Application.PersonId" hidden />
                        <input asp-for="NewLicense.Application.ApplicationTypeId" hidden />
                        <input asp-for="NewLicense.Application.CreatedByUserId" hidden />

                        <div class="mb-3">
                            <label asp-for="@Model.NewLicense.Notes" class="fw-semibold d-block mb-2">ملاحظات</label>
                            <textarea asp-for="@Model.NewLicense.Notes" class="form-control @disabled" rows="3" placeholder="أكتب الملاحظات هنا"></textarea>
                        </div>

                        <div class="text-center text-md-start">
                            <button type="submit" id="submitBtn" class="btn btn-primary px-4 @disabled">
                                <i class="fa-solid fa-id-card fa-fw me-2"></i> @ActionName
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var showErrorModal = @ShowErrorModal.ToString().ToLower();
            if (showErrorModal) {
                $('#errorModal').modal('show');
            }

            // Handle radio change
            $('input[name="OperationType"]').on('change', function () {
                const selectedVal = $(this).val();
                const $text = $('#submitBtn');

                if (selectedVal.includes('LostReplacement')) {
                    $text.text('إصدار بدل فاقد');
                } else if (selectedVal.includes('DamagedReplacement')) {
                    $text.text('إصدار بدل تالف');
                }
            });
        });
    </script>
}
